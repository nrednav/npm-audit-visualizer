{
  "name": "npm-audit-visualizer",
  "version": "1.0.0",
  "description": "a web-based tool to visualize the report generated by npm audit",
  "exports": "./build/main.js",
  "type": "module",
  "author": "Vandern Rodrigues <nrednav@gmail.com> (https://vandern.com)",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrednav/npm-audit-visualizer.git"
  },
  "homepage": "https://github.com/nrednav/npm-audit-visualizer#readme",
  "bugs": {
    "url": "https://github.com/nrednav/npm-audit-visualizer/issues"
  },
  "keywords": [
    "npm",
    "audit",
    "data",
    "visualizer",
    "json",
    "security",
    "vulnerability",
    "severity",
    "dependency",
    "graph",
    "table",
    "summary",
    "report",
    "tool"
  ],
  "bin": {
    "npm-audit-visualizer": "build/main.js"
  },
  "scripts": {
    "dev": "tsx ./src/main.ts",
    "dev:watch": "tsx watch ./src/main.ts",
    "start": "node ./build/main.js",
    "build": "pnpm run clean && tsup ./src/main.ts && chmod +x ./build/main.js",
    "build:web-app": "cd ./src/web-app && pnpm install && pnpm run build",
    "clean": "pnpm exec del ./build/",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "biome format --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "lint": "biome lint --apply --no-errors-on-unmatched --files-ignore-unknown=true",
    "check": "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true",
    "prepare": "husky install",
    "postinstall": "pnpm run build && pnpm run build:web-app"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fp-ts": "^2.16.2",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@types/node": "^20.11.6",
    "@types/yargs": "^17.0.32",
    "del-cli": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsup": "^8.0.1",
    "tsx": "4.7.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.1"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "tsup": {
    "target": "es2020",
    "format": [
      "esm"
    ],
    "outDir": "./build/"
  }
}
