{
  "name": "npm-audit-visualizer",
  "version": "1.0.0-alpha.2",
  "description": "a web-based tool to visualize audit reports generated by npm audit",
  "exports": "./build/main.js",
  "type": "module",
  "author": "Vandern Rodrigues <nrednav@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrednav/npm-audit-visualizer.git"
  },
  "homepage": "https://github.com/nrednav/npm-audit-visualizer#readme",
  "bugs": {
    "url": "https://github.com/nrednav/npm-audit-visualizer/issues"
  },
  "keywords": [
    "npm",
    "audit",
    "report",
    "visualizer",
    "json",
    "security",
    "vulnerability",
    "severity",
    "dependency",
    "graph",
    "table",
    "summary",
    "tool"
  ],
  "bin": {
    "npm-audit-visualizer": "build/main.js"
  },
  "files": [
    "build/"
  ],
  "scripts": {
    "dev": "tsx ./src/main.ts",
    "dev:watch": "tsx watch ./src/main.ts",
    "start": "node ./build/main.js",
    "prebuild": "npm run build:web-app",
    "build": "npm run clean && npm run type-check && tsup ./src/main.ts && chmod +x ./build/main.js",
    "build:web-app": "cd src/modules/WebApp && npm install && npm run build",
    "clean": "npx del ./build/",
    "test": "vitest run && npm run test:web-app",
    "test:web-app": "npm --prefix src/modules/WebApp run test",
    "test:watch": "vitest",
    "type-check": "npx tsc --noEmit",
    "format": "biome format --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "lint": "biome lint --apply --no-errors-on-unmatched --files-ignore-unknown=true",
    "check": "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true",
    "prepare": "husky install",
    "prepack": "npm run build",
    "postversion": "cd src/modules/WebApp && npm version $npm_package_version"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fp-ts": "^2.16.2",
    "graphology": "^0.25.4",
    "serve-handler": "^6.1.5",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@types/node": "^20.11.6",
    "@types/serve-handler": "^6.1.4",
    "@types/yargs": "^17.0.32",
    "del-cli": "^5.1.0",
    "graphology-types": "0.24.7",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsup": "^8.0.1",
    "tsx": "4.7.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.1"
  },
  "lint-staged": {
    "**/*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
